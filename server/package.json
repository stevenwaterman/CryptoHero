{
  "name": "bitcoin-exchange-server",
  "version": "0.0.1",
  "private": true,
  "description": "Server-side code for bitcoin exchange",
  "author": "Scott Logic Ltd & Steven Waterman",
  "main": "index.js",
  "globalDependencies": {
    "node": "github:DefinitelyTyped/DefinitelyTyped/node/node.d.ts"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "big.js": "^5.2.2",
    "immutable": "^4.0.0-rc.12",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-proposal-private-methods": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/big.js": "^4.0.5",
    "@types/jest": "^24.0.17",
    "@types/uuid": "^3.4.5",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^5.2.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "typings": "^2.1.1"
  },
  "scripts": {
    "build+run": "npm run build && npm run start",
    "start": "node out/index.js",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel app --out-dir out --extensions .ts --source-maps inline",
    "postinstall": "typings install --save"
  },
  "jest": {
    "testURL": "http://localhost/",
    "roots": [
      "<rootDir>/test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-private-methods",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-optional-chaining",
      "@babel/plugin-proposal-nullish-coalescing-operator"
    ]
  }
}
